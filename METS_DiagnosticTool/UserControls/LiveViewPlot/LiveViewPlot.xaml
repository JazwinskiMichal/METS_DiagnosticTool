<UserControl x:Class="METS_DiagnosticTool_UI.UserControls.LiveViewPlot.LiveViewPlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:METS_DiagnosticTool_UI.UserControls.LiveViewPlot" xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" xmlns:local1="clr-namespace:METS_DiagnosticTool_UI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance local:LiveViewPlot}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Style="{StaticResource SimpleButton}" Click="InjectStopOnClick">Clear</Button>

            <Rectangle Grid.Column="1" VerticalAlignment="Stretch" Width="1" Margin="2,10,2,10" Stroke="Black" Visibility="{Binding ShowAutoscaleButtons, Converter={StaticResource BoolToVis}}"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Visibility="{Binding ShowAutoscaleButtons, Converter={StaticResource BoolToVis}}">
                <Label x:Name="lblAutoScale" Margin="15,0,0,0" Content="{Binding ShowAutoScaleActive, Converter={StaticResource AutoScaleBoolToStringConverter}}" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="14" Padding="0" Height="40"/>

                <Grid>
                    <local1:UserInputWithIndicator_Image Height="30" Margin="10" x:Name="autoScaleON" 
                                                    Style="{StaticResource recordingON}" RenderTransformOrigin="0.5,0.5" Visibility="{Binding ShowAutoScaleActive, Converter={StaticResource BoolToVis}}" MouseDown="autoScaleON_MouseDown">
                        <local1:UserInputWithIndicator_Image.Color>
                            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}"/>
                        </local1:UserInputWithIndicator_Image.Color>
                    </local1:UserInputWithIndicator_Image>

                    <local1:UserInputWithIndicator_Image Height="30" Margin="10" x:Name="autoscaleOFF"
                                                    Style="{StaticResource recordingOFF}" RenderTransformOrigin="0.5,0.5" Visibility="{Binding ShowAutoScaleInactive, Converter={StaticResource BoolToVis}}" MouseDown="autoscaleOFF_MouseDown">
                        <local1:UserInputWithIndicator_Image.Color>
                            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}"/>
                        </local1:UserInputWithIndicator_Image.Color>
                    </local1:UserInputWithIndicator_Image>
                </Grid>
            </StackPanel>
        </Grid>
        
        <lvc:CartesianChart Name="liveViewChart" Grid.Row="2" DisableAnimations="True" DataTooltip="{x:Null}" Hoverable="False">
            <lvc:CartesianChart.Resources>
                <Style TargetType="lvc:LineSeries">
                    <Setter Property="Stroke" Value="Black"/>
                    <Setter Property="StrokeThickness" Value="2"></Setter>
                    <Setter Property="Fill">
                        <Setter.Value>
                            <SolidColorBrush Color="Chartreuse" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="LineSmoothness" Value=".3"></Setter>
                    <Setter Property="AreaLimit" Value="0"></Setter>
                </Style>
                <!--<Style TargetType="lvc:Separator">
                    <Setter Property="Stroke" Value="#DADADA"></Setter>
                    <Setter Property="StrokeThickness" Value="2"></Setter>
                    <Style.Triggers>
                        <Trigger Property="AxisOrientation" Value="X">
                            <Setter Property="IsEnabled" Value="False"></Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>-->
            </lvc:CartesianChart.Resources>
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Values="{Binding ChartValues}" PointGeometry="{x:Null}"></lvc:LineSeries>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis 
                    LabelFormatter="{Binding DateTimeFormatter}"
                    MinValue="{Binding AxisXMin}" 
                    MaxValue="{Binding AxisXMax}"
                    Unit="{Binding AxisXUnit}"
                    Foreground="#FFAAAAAA">
                    <lvc:Axis.Separator>
                        <lvc:Separator Step="{Binding AxisXStep}"/>
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis MinValue="{Binding AxisYMin}" MaxValue="{Binding AxisYMax}">
                    <lvc:Axis.Sections>
                        <lvc:AxisSection Value="0" StrokeThickness="3" Stroke="Black"></lvc:AxisSection>
                    </lvc:Axis.Sections>
                </lvc:Axis>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
        <TextBlock Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                   Margin="40 20" FontSize="110" Foreground="#72000000" 
                   Text="{Binding CurrentValue, StringFormat={}{0:N3}}"></TextBlock>
    </Grid>
</UserControl>
